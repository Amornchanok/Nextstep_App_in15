<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".partnerRegister.PartnerRegisterProfileActivity">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="ขั้นตอนที่ 1 กรอกข้อมูลสตูดิโอ"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:background="@color/purple"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ชื่อสตูดิโอ"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:id="@+id/edtStudioname"
            android:padding="15dp"
            android:inputType="text"
            android:background="@drawable/rounded_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ที่ตั้ง"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:id="@+id/edtLocation"
            android:padding="15dp"
            android:inputType="text"
            android:background="@drawable/rounded_input"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:id="@+id/edt_gender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:textSize="25dp"
            android:padding="15dp"
            android:text="สิ่งอำนวยความสะดวก"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="เครื่องปรับอากาศ"
            android:textSize="20dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ลำโพง"
            android:textSize="20dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ห้องน้ำ"
            android:textSize="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="อินเทอร์เน็ต"
                android:textSize="20dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ที่จอดรถ"
                android:textSize="20dp"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="อื่นๆ"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:textSize="25dp"
            android:padding="15dp"
            android:text="เวลาเปิด-ปิด บริการ"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="เวลาเปิด"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:shadowColor="@color/purple"
            android:inputType="number"
            android:id="@+id/edtTimeOpen"
            android:background="@drawable/rounded_input"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="เวลาปิด"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:shadowColor="@color/purple"
            android:inputType="number"
            android:id="@+id/edtTimeClose"
            android:background="@drawable/rounded_input"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ต่อไป"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:padding="15dp"
            android:fontFamily="@font/db_adman_x"
            android:background="@drawable/gradient_button"
            android:id="@+id/btInfoStudio" />

    </LinearLayout>

    </LinearLayout>