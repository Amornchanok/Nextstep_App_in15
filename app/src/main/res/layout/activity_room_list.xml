            <TextView
                android:id="@+id/text_studioId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text_studioId"
                android:textSize="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_studioImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text_studioImg"
                android:textSize="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_studioLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text_studiologo"
                android:textSize="20dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-50dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="left"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_camera" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="150dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_score"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text=" ส่งข้อความ"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_studioName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Studio Name"
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2">

                    <TextView
                        android:id="@+id/tvStdRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/rounded_score"
                        android:drawableLeft="@drawable/ic_baseline_star_20"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="4.5 (112)"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15.5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_studioLoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_outline_location_on_24"
                        android:gravity="right"
                        android:text=" ที่ตั้ง"
                        android:textColor="@color/purple"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvStdConvenient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="เวลาให้บริการ :"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvStdR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="10.00 - 22.00"
                            android:textColor="@color/purple"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvStdTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="สิ่งอำนวยความสะดวก"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvStdConvenientLis1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:drawableTop="@drawable/ic_round_air_24"
                            android:text="แอร์"
                            android:textColor="@color/purple"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tvStdConvenientList2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:drawableTop="@drawable/ic_round_wifi_24"
                            android:text="เน็ต"
                            android:textColor="@color/purple"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tvStdConvenientList4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:drawableTop="@drawable/ic_outline_speaker_24"
                            android:text="ลำโพง"
                            android:textColor="@color/purple"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tvStdConvenientList3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:drawableTop="@drawable/ic_outline_directions_car_filled_24"
                            android:text="ที่จอดรถ"
                            android:textColor="@color/purple"
                            android:textSize="20dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ห้อง"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/room_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp" />

<!--        </LinearLayout>-->
<!--    </ScrollView>-->

</LinearLayout>
