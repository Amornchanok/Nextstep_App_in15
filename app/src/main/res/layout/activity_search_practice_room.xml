<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".searchStudio.SearchRoomActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-110dp"
        android:src="@drawable/img_header01"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-85dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/rounded_corners">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:ignore="MissingConstraints">
                
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLoction"
            android:gravity="left"
            android:drawableLeft="@drawable/icon_search_lct01"
            android:fontFamily="@font/db_adman_x"
            android:paddingTop="20dp"
            android:textSize="20dp"
            android:hint="  เลือกตำแหน่ง"
            android:background="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDate"
            android:gravity="left"
            android:drawableLeft="@drawable/icon_search_lct02"
            android:fontFamily="@font/db_adman_x"
            android:paddingTop="20dp"
            android:textSize="20dp"
            android:hint="  วันที่"
            android:background="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
           android:background="@color/gray"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTime"
            android:gravity="left"
            android:drawableLeft="@drawable/icon_search_lct03"
            android:fontFamily="@font/db_adman_x"
            android:paddingTop="20dp"
            android:textSize="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:hint="  เวลา"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_search_lct04"
            android:fontFamily="@font/db_adman_x"
            android:textSize="20dp"
            android:hint="  จำนวนคน"
            android:layout_margin="5dp"
            android:id="@+id/edtPersons"
            android:inputType="number"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:text="ค้นหา"
            android:id="@+id/btSearch"
            android:fontFamily="@font/db_adman_x"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:background="@drawable/gradient_button">
        </Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchRoom"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>