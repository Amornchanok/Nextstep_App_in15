<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studioProfile.tab.InfoStudioFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="55dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:text="เวลาให้บริการ" />

    <TextView
        android:id="@+id/tvStdTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/purple"
        android:paddingTop="10dp"
        android:layout_marginLeft="25dp"
        android:text="10.00 - 22.00" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:text="สิ่งอำนวยความสะดวก" />

        <TextView
            android:id="@+id/tvStdConvenient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/purple"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="แอร์ อินเทอร์เน็ต ลานจอดรถ" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:text="ตำแหน่ง" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:text="การเดินทาง" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/purple"
            android:paddingTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="BTS ราชเทวี" />

    </LinearLayout>


</FrameLayout>