<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".searchStudio.SearchStudioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/topbar"
            android:layout_marginBottom="10dp" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-70dp"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:background="@drawable/ic_baseline_search_24" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="-45dp"
            android:layout_marginLeft="25dp"
            android:background="@null"
            android:id="@+id/btnAllStudio"
            android:layout_gravity="left"
            android:drawableLeft="@drawable/ic_list_all_40"
            android:textSize="20dp"
            android:text=" สตูดิโอทั้งหมด"
            android:textColor="@color/white"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/rounded_corners">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingConstraints">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnLoction"
                android:gravity="left"
                android:drawableLeft="@drawable/ic_outline_location_on_30"
                android:paddingTop="20dp"
                android:textSize="20dp"
                android:hint="  เลือกตำแหน่ง"
                android:background="?android:attr/selectableItemBackground"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnDate"
                android:gravity="left"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:fontFamily="@font/db_adman_x"
                android:paddingTop="20dp"
                android:textSize="20dp"
                android:hint="  วันที่"
                android:background="?android:attr/selectableItemBackground"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

<!--                    <Button-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:id="@+id/btnTime"-->
<!--                        android:gravity="left"-->
<!--                        android:drawableLeft="@drawable/icon_search_lct03"-->
<!--                        android:fontFamily="@font/db_adman_x"-->
<!--                        android:paddingTop="20dp"-->
<!--                        android:textSize="20dp"-->
<!--                        android:background="?android:attr/selectableItemBackground"-->
<!--                        android:hint="  เวลา"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:textSize="20dp"
                android:hint="  จำนวนคน"
                android:id="@+id/edtPersons"
                android:inputType="number"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-5dp"
        android:text="ค้นหา"
        android:id="@+id/btSearch"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:background="@drawable/gradient_button">
    </Button>


</LinearLayout>